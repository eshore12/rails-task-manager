<h1>Add a Task</h1>

<%= form_for @task do |task|%>
<div class="form-group">
<%= task.label :title %>
<%= task.text_field :title %>
</div>
<div class="form-group">
<%= task.label :details %>
<%= task.text_field :details %>
</div>
<%= task.submit class: 'btn btn-primary' %>
<% end %>

<%= link_to "Back to Tasks List", tasks_path %>
